            @Html.DisplayFor(model => model.STD)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DOB)
        </dt>
        <dd class = "col-sm-10">
            @Model.DOB.ToString("dd/MM/yyyy")
        </dd>
        </dd>
